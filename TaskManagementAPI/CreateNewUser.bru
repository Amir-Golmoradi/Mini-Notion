meta {
  name: CreateNewUser
  type: graphql
  seq: 1
}

post {
  url: http://localhost:8080/api/v1/users
  body: graphql
  auth: inherit
}

body:graphql {
  {
    # Create a user
    mutation {
      createUser(
        input: {
          name: "John Doe"
          email: "john@example.com"
          passwordHash: "hashedpassword"
        }
      ) {
        id
        name
        email
      }
    }
  }
  
}

settings {
  encodeUrl: true
}
